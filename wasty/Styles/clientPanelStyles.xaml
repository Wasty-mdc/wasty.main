<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- Fuente por defecto para títulos -->
    <FontFamily x:Key="TitleFontFamily">Segoe UI</FontFamily>

    <!-- Estilo general para GroupBox -->
    <Style TargetType="GroupBox">
        <Setter Property="Margin" Value="10"/>
        <Setter Property="FontFamily" Value="{StaticResource TitleFontFamily}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Width" Value="Auto"/>
    </Style>

    <!-- Estilo para TextBlock -->
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Margin" Value="6,3,6,3"/>
    </Style>

    <!-- Estilo para TextBox -->
    <Style TargetType="TextBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="#33000000"/>
    </Style>

    <!-- Estilo para ComboBox -->
    <Style TargetType="ComboBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <!-- Estilo para CheckBox -->
    <Style TargetType="CheckBox">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- Estilo para DockPanel superior -->
    <Style x:Key="TopBarStyle" TargetType="DockPanel">
        <Setter Property="Background" Value="#0ead69"/>
    </Style>

    <!-- Estilo para botones CRUD -->
    <Style x:Key="CrudButtonStyle" TargetType="Button">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <!-- Estilo para iconos MaterialDesign -->
    <Style x:Key="CrudIconStyle" TargetType="md:PackIcon">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Estilo para los textos debajo de los botones CRUD -->
    <Style x:Key="CrudTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="TextAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>
