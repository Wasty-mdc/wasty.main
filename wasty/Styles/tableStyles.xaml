<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes" 

                    >

    <!-- Estilos generales para la tabla -->
    <Style x:Key="TableHeaderStyle" TargetType="Border">
        <Setter Property="Background" Value="#333"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style x:Key="TableHeaderTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>

    <Style x:Key="TableRowStyle" TargetType="Grid">
        <Setter Property="Margin" Value="0,2,0,2"/>
        <Setter Property="Background" Value="#F5F5F5"/>
    </Style>

    <Style x:Key="TableRowAlternateStyle" TargetType="Grid">
        <Setter Property="Margin" Value="0,2,0,2"/>
        <Setter Property="Background" Value="#E0E0E0"/>
    </Style>

    <Style x:Key="TableRowSelectedStyle" TargetType="Grid">
        <Setter Property="Background" Value="#D1C4E9"/>
    </Style>

    <Style x:Key="TableButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFloatingActionMiniButton}">
        <Setter Property="Width" Value="35"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <Style x:Key="TableIconStyle" TargetType="md:PackIcon">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Margin" Value="5,0,0,0"/>
    </Style>

</ResourceDictionary>
