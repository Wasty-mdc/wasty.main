<Window x:Class="wasty.Utils.ImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Importar Archivos" Height="480" Width="480"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="White" WindowStyle="SingleBorderWindow"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver">

    <Border BorderBrush="#0D0A0B" BorderThickness="5" CornerRadius="15" Margin="8" Background="#FFF9F9F9">
        <Grid Margin="16">
            <!-- Icono gigante de fondo -->
            <md:PackIcon Kind="Import"
                         Width="250"
                         Height="250"
                         Opacity="0.7"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Foreground="#0D0A0B"
                         Panel.ZIndex="0" />

            <!-- Contenido -->
            <Grid Panel.ZIndex="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Texto de instrucciones -->
                <TextBlock Grid.Row="0"
                           Text="Arrastra y suelta tus archivos aquí"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#0D0A0B"
                           TextAlignment="Center"
                           HorizontalAlignment="Center"
                           Margin="0,16,0,16" />

                <!-- Panel con la lista y el botón -->
                <StackPanel x:Name="FilePanel" Grid.Row="1" Grid.RowSpan="2"
                            Visibility="Collapsed"
                            VerticalAlignment="Top">
                    <ListBox Name="FilesListBox"
                             Opacity="0.9"
                             Margin="8 32 8 8"
                             BorderBrush="#DDD"
                             BorderThickness="1"
                             Background="White"
                             FontSize="14"
                             Foreground="#222"
                             Height="200" />

                    <Button Content="Aceptar"
                            HorizontalAlignment="Center"
                            Width="120"
                            Height="35"
                            Cursor="Hand"
                            FontWeight="Bold"
                            Click="AcceptButton_Click"
                            Background="Transparent"
                            Foreground="#0D0A0B"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
