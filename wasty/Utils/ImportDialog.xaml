<Window x:Class="wasty.Utils.ImportDialog"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Importar Archivos" Height="300" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="White" WindowStyle="SingleBorderWindow">
    <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="10" Margin="10">
        <Grid AllowDrop="True">
            <TextBlock Text="Arrastra aquí tus archivos para importar"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="16"
                       Foreground="Gray"
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>
        </Grid>
    </Border>
</Window>
