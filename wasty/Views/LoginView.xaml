<!-- Vista de inicio de sesión para Wasty, definida en XAML. 
     Contiene campos para usuario y contraseña, con enlaces a propiedades en el ViewModel y estilos reutilizables.
     Incluye soporte para validación de entrada y mensajes de error (actualmente comentados). 
 -->

<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
    x:Class="wasty.Views.LoginView"
    mc:Ignorable="d"
    Height="600" Width="1200"
>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="300" Width="300">
            <!-- Título -->
            <TextBlock Text="Wasty" FontSize="24" HorizontalAlignment="Center"/>
            <TextBlock Text="Inicio de Sesión" FontSize="20" HorizontalAlignment="Center" Margin="0,5,0,5"/>

            <!-- RegisterTextBox para el usuario -->
            <Label Content="Usuario" FontSize="14" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" Margin="0,-5,0,-5"/>
            <TextBox Style="{StaticResource RegisterTextBox}">
                <TextBox.Text>
                    <Binding Path="Username" UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
                        <Binding.ValidationRules>
                            <!-- <local:NotEmptyValidationRule/ >-->
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>

            <!-- RegisterPasswordBox para la contraseña -->
            <Label Content="Contrasena" FontSize="14" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center" Margin="0,-5,0,-5"/>
            <PasswordBox Style="{StaticResource RegisterPasswordBox}">
                <!-- 
                <Binding Path="Password" UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
                <PasswordBox.Password>
                        <Binding.ValidationRules>
                             <local:PasswordValidationRule/> 
                        </Binding.ValidationRules>
                    </Binding>
                </PasswordBox.Password>
                -->
            </PasswordBox>

            <!-- RegisterButton para iniciar sesión -->
            <Button Content="Iniciar Sesión" Style="{StaticResource RegisterButton}" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Mensajes de Error 
        <TextBlock Foreground="#e24a4d" FontSize="12">
            <TextBlock.Text>
                <Binding Path="(Validation.Errors)[0].ErrorContent"
                 RelativeSource="{RelativeSource PreviousData}">
                </Binding>
            </TextBlock.Text>
        </TextBlock> 
        -->

    </Grid>
</Window>