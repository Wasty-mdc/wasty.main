<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
    x:Class="wasty.Views.LoginView"
    mc:Ignorable="d"
    Height="600" Width="1200"
>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="240" Width="240">
            <!-- Título -->
            <TextBlock Text="Wasty" FontSize="24" HorizontalAlignment="Center"/>
            <TextBlock Text="Inicio de Sesión" FontSize="20" HorizontalAlignment="Center"/>

            <!-- LoginTextBox para el usuario -->
            <TextBox Style="{StaticResource LoginTextBox}" />

            <!-- LoginPasswordBox para la contraseña -->
            <PasswordBox Style="{StaticResource LoginPasswordBox}" Margin="0,10,0,0"/>

            <!-- LoginButton para iniciar sesión -->
            <Button Content="Iniciar Sesión" Style="{StaticResource LoginButton}" HorizontalAlignment="Center"/>
        </StackPanel>

    </Grid>
</Window>
