<UserControl x:Class="wasty.Views.ResiduosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:wasty.Views"
             mc:Ignorable="d"
             Height="Auto"
             Width="Auto"
             Background="#4CECEAE8">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/tableStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="{StaticResource MainGradientBackground}">
        <StackPanel>

            <!-- Barra superior con botones CRUD -->
            <DockPanel Background="#0ead69">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Cursor="Hand">
                    <StackPanel Orientation="Vertical" Margin="5" HorizontalAlignment="Center">
                        <Button Style="{StaticResource CrudButtonStyle}" Command="{Binding NavigateToResiduosPanelCommand}" CommandParameter="{Binding ResiduoSeleccionado}">
                            <md:PackIcon Kind="DeveloperBoard" Style="{StaticResource CrudIconStyle}"/>
                        </Button>
                        <TextBlock Text="Abrir Panel" Style="{StaticResource CrudTextStyle}"/>
                    </StackPanel>

                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="CLIENTE : METALLS DEL CAMP. SLU." FontSize="30" FontWeight="Bold" Foreground="White"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="80,0,80,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Cursor="Hand" DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <StackPanel Orientation="Vertical" Margin="5">
                            <Button Style="{StaticResource CrudButtonStyle}">
                                <md:PackIcon Kind="Magnify" Style="{StaticResource CrudIconStyle}"/>
                            </Button>
                            <TextBlock Text="Buscar" Style="{StaticResource CrudTextStyle}"/>
                        </StackPanel>
                        <StackPanel Orientation="Vertical" Margin="5">
                            <Button Style="{StaticResource CrudButtonStyle}">
                                <md:PackIcon Kind="FilterMultiple" Style="{StaticResource CrudIconStyle}"/>
                            </Button>
                            <TextBlock Text="Filtros" Style="{StaticResource CrudTextStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </DockPanel>

            <!-- Tabla con paginación -->
            <DataGrid ItemsSource="{Binding PaginadorResiduos.ItemsPaginados}"
                      SelectedItem="{Binding ResiduoSeleccionado}"
                      MouseDoubleClick="DataGrid_MouseDoubleClick"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Código" Binding="{Binding Referencia}" />
                    <DataGridTextColumn Header="Denominación" Binding="{Binding Denominacion}" />
                    <DataGridTextColumn Header="LER" Binding="{Binding LER}" />
                    <DataGridTextColumn Header="TratamientoR" Binding="{Binding TratamientoR}" />
                    <DataGridTextColumn Header="TratamientoD" Binding="{Binding TratamientoD}" />
                    <DataGridTextColumn Header="Peligrosidad" Binding="{Binding Peligrosidad}" />
                    <DataGridTextColumn Header="ONU" Binding="{Binding NumeroONU}" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Controles de paginación -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="10,0,10,20">
                <Button Content="Anterior"
                        Command="{Binding PaginadorResiduos.AnteriorCommand}"
                        Style="{StaticResource CrudButtonStyle}"
                        Margin="5" />
                <TextBlock Text="{Binding PaginadorResiduos.PaginaActual}"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="5"/>
                <TextBlock Text=" / " VerticalAlignment="Center" FontSize="16"/>
                <TextBlock Text="{Binding PaginadorResiduos.TotalPaginas}"
                           VerticalAlignment="Center"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="5"/>
                <Button Content="Siguiente"
                        Command="{Binding PaginadorResiduos.SiguienteCommand}"
                        Style="{StaticResource CrudButtonStyle}"
                        Margin="5" />
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
