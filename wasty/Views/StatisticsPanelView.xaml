<UserControl x:Class="wasty.Views.StatisticsPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:wasty.Views"
             mc:Ignorable="d"
             Height="Auto"
             Width="Auto"
             Background="Transparent">

    <!-- Definicion de estilos reutilizables para los Botones de estadisticas -->
    <UserControl.Resources>
        <Style x:Key="StatsButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="320"/>
            <Setter Property="Height" Value="160"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- Estructura principal del panel de estadisticas -->
    <Grid Background="{StaticResource MainGradientBackground}">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Titulo de la seccion de estadisticas -->
            <TextBlock Text="ESTADISTICAS" FontSize="48" FontWeight="ExtraBold" Foreground="Black" 
                       HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,56,0,20"/>

            <!-- Contenedor de Botones organizados en linea -->
            <WrapPanel HorizontalAlignment="Center" Width="Auto" Margin="10">
                <!-- Boton CLIENTES -->
                <Button Style="{StaticResource StatsButtonStyle}" Background="#266DD3">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <md:PackIcon Kind="AccountMultiple" Width="56" Height="56" Foreground="White" Margin="20,0,0,0"/>
                        <TextBlock Text="CLIENTES" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!-- Boton RESIDUOS -->
                <Button Style="{StaticResource StatsButtonStyle}" Background="#A0C26C">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <md:PackIcon Kind="Recycle" Width="56" Height="56" Foreground="White" Margin="20,0,0,0"/>
                        <TextBlock Text="RESIDUOS" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!-- Boton ENVIOS -->
                <Button Style="{StaticResource StatsButtonStyle}" Background="#FFD166">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <md:PackIcon Kind="Truck" Width="56" Height="56" Foreground="White" Margin="10,0,0,0"/>
                        <TextBlock Text="ENVIOS" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!-- Boton RECOGIDAS -->
                <Button Style="{StaticResource StatsButtonStyle}" Background="#FF6B6B">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <md:PackIcon Kind="PackageVariantClosed" Width="56" Height="56" Foreground="White" Margin="25,0,0,0"/>
                        <TextBlock Text="RECOGIDAS" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!-- Boton STOCK -->
                <Button Style="{StaticResource StatsButtonStyle}" Background="#A27035">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <md:PackIcon Kind="Warehouse" Width="56" Height="56" Foreground="White" Margin="5,0,0,0"/>
                        <TextBlock Text="STOCK" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!-- Boton COBROS -->
                <Button Style="{StaticResource StatsButtonStyle}" Background="#27ae60">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <md:PackIcon Kind="PointOfSale" Width="56" Height="56" Foreground="White" Margin="15,0,0,0"/>
                        <TextBlock Text="COBROS" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!-- Boton PAGOS -->
                <Button Style="{StaticResource StatsButtonStyle}" Background="#f39c12">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <md:PackIcon Kind="CashFast" Width="56" Height="56" Foreground="White" Margin="5,0,0,0"/>
                        <TextBlock Text="PAGOS" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!-- Boton MATERIAL -->
                <Button Style="{StaticResource StatsButtonStyle}" Background="#343a40">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <md:PackIcon Kind="Archive" Width="56" Height="56" Foreground="White" Margin="15,0,0,0"/>
                        <TextBlock Text="MATERIAL" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!-- Boton VENTAS -->
                <Button Style="{StaticResource StatsButtonStyle}" Background="#2d6a4f ">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <md:PackIcon Kind="Store" Width="56" Height="56" Foreground="White" Margin="10,0,0,0"/>
                        <TextBlock Text="VENTAS" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <!-- Boton COBROS -->
                <Button Style="{StaticResource StatsButtonStyle}" Background="#8d0801 ">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <md:PackIcon Kind="CartVariant" Width="56" Height="56" Foreground="White" Margin="10,0,0,0"/>
                        <TextBlock Text="COBROS" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>